<h3>Add Story</h3>
<div class="row">
    <form action="/stories" method="POST" class="col s12" name="myForm">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title"  ng-model="title" required/>
                <span ng-show="myForm.title.$touched && myForm.title.$invalid" style="color: red;">Title is required.</span>
                <label for="title">Title</label>
            </div>
            
        </div>

        <div class="row">
            <span style="color:red" ng-show="myForm.status.$dirty && myForm.status.$invalid">
                <span ng-show="myform.status.$error.required">Is required.</span>
                </span> 
            <div class="input-field">
                
                <select id="status" name="status" ng-model="status"  required>
                     <option value="">-- Select option --</option>
                    <option value="public" >Public</option>
                    <option value="private">Private</option>
                </select>
                <label for="status">Status</label>
            </div>
            
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story:</h5>
                <textarea id="body" name="body"></textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn" onclick="fun()">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>